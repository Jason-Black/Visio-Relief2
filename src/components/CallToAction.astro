<section id="contact" class="cta">
  <div class="container">
    <div class="cta-content">
      <h2>Your New Clarity Begins Here</h2>
      <p>Take the first step toward mental clarity with a free 30-minute consultation. We'll discuss your current challenges and explore how the Visio Relief system might help.</p>
      
      <div class="booking-container">
        <div class="booking-info">
          <h3>Book Your Free Clarity Call</h3>
          <ul class="call-benefits">
            <li>Personalized assessment of your current mental clarity challenges</li>
            <li>Introduction to key Visio Relief techniques you can start using immediately</li>
            <li>Clear understanding of how the full system works and if it's right for you</li>
            <li>No pressure, no obligation - just clarity about your next steps</li>
          </ul>
        </div>
        
        <div class="booking-form">
          <form action="#" method="POST" id="bookingForm">
            <div class="form-group">
              <label for="name">Full Name</label>
              <input type="text" id="name" name="name" required>
            </div>
            
            <div class="form-group">
              <label for="email">Email Address</label>
              <input type="email" id="email" name="email" required>
            </div>
            
            <div class="form-group">
              <label for="phone">Phone Number</label>
              <input type="tel" id="phone" name="phone">
            </div>
            
            <div class="form-group">
              <label for="message">What are you hoping to gain from the Visio Relief system?</label>
              <textarea id="message" name="message" rows="3"></textarea>
            </div>
            
            <button type="submit" class="button large">Book My Free Call</button>
          </form>
          <p class="form-note">Or schedule directly through our <a href="#" class="calendly-link">online calendar</a></p>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Simple form validation
  const form = document.getElementById('bookingForm');
  
  if (form) {
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      
      // In a real implementation, this would send the form data to a server
      // For now, we'll just show a success message
      
      form.innerHTML = `
        <div class="success-message">
          <h3>Thank You!</h3>
          <p>Your clarity call has been requested. We'll be in touch within 24 hours to confirm your appointment.</p>
          <p>In the meantime, check your email for a welcome message with some initial resources to start your journey.</p>
        </div>
      `;
    });
  }
  
  // Calendly popup (simulated)
  const calendlyLink = document.querySelector('.calendly-link');
  
  if (calendlyLink) {
    calendlyLink.addEventListener('click', (e) => {
      e.preventDefault();
      alert('In a real implementation, this would open a Calendly scheduling popup.');
    });
  }
</script>

